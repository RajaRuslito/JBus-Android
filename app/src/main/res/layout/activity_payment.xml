<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:orientation="vertical"
    android:background="@drawable/newbgmain">

    <androidx.appcompat.widget.SearchView
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        app:queryHint="Search.." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="728dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Manage Your Seat"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="610dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            tools:context=".ManageBookingActivity"
            tools:listitem="@layout/bookedd_seat_listview" />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_gravity="bottom"
        android:background="@drawable/actshape"
        app:menu="@menu/bot_men" />

</LinearLayout>